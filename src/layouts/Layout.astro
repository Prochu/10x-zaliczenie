---
import "../styles/global.css";
import { Navigation } from "../components/Navigation";
import type { MeDto } from "../types";

interface Props {
  title?: string;
  showNavigation?: boolean;
  user?: MeDto | null;
}

const { title = "BetBuddy", showNavigation = false, user = null } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {showNavigation && <Navigation currentPath={currentPath} user={user} client:load />}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
