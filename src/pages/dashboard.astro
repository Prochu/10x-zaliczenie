---
import Layout from "../layouts/Layout.astro";
import DashboardComponent from "../components/Dashboard";

const title = "Dashboard - BetBuddy";

// Get user from middleware (if authenticated)
const user = Astro.locals.user;
---

<Layout title={title} showNavigation={true} user={user}>
  <main class="min-h-screen pb-20 md:pb-8">
    <DashboardComponent user={user} client:load />
  </main>
</Layout>
