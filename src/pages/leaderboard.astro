---
import Layout from "../layouts/Layout.astro";
import LeaderboardHeader from "../components/LeaderboardHeader";
import LeaderboardContainer from "../components/LeaderboardContainer";

const title = "Leaderboard - BetBuddy";

// Check if user is authenticated
const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/auth/login");
}
---

<Layout title={title} showNavigation={true} user={user}>
  <main class="min-h-screen pb-20 md:pb-8">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="bg-background/40 backdrop-blur-md p-6 rounded-xl border border-white/10 shadow-lg mb-8">
        <LeaderboardHeader totalPlayers={undefined} lastUpdated={undefined} client:load />
      </div>

      <div class="bg-background/40 backdrop-blur-md p-6 rounded-xl border border-white/10 shadow-lg">
        <LeaderboardContainer currentUser={user} client:load />
      </div>
    </div>
  </main>
</Layout>
